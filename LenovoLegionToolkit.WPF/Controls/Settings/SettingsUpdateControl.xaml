<UserControl
    x:Class="LenovoLegionToolkit.WPF.Controls.Settings.SettingsUpdateControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:custom="clr-namespace:LenovoLegionToolkit.WPF.Controls.Custom"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="0,0,16,12">
            <custom:CardControl x:Name="_checkUpdatesCard" Margin="0,0,0,8">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.SettingsPage_CheckUpdates_Title}" />
                </custom:CardControl.Header>
                <wpfui:Button
                    x:Name="_checkUpdatesButton"
                    MinWidth="160"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_CheckUpdates_Title}"
                    Click="CheckUpdates_Click"
                    Content="{x:Static resources:Resource.SettingsPage_CheckUpdatesButton_Content}"
                    Visibility="Hidden" />
            </custom:CardControl>

            <custom:CardControl x:Name="_updateCheckFrequencyCard" Margin="0,0,0,8">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl Title="{x:Static resources:Resource.SettingsPage_UpdateCheckFrequency_Title}" />
                </custom:CardControl.Header>
                <ComboBox
                    x:Name="_updateCheckFrequencyComboBox"
                    MinWidth="160"
                    Margin="0,0,0,8"
                    AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_UpdateCheckFrequency_Title}"
                    MaxDropDownHeight="Auto"
                    SelectionChanged="UpdateCheckFrequencyComboBox_SelectionChanged"
                    Visibility="Hidden" />
            </custom:CardControl>

            <custom:CardControl x:Name="_updateRepositoryCard" Margin="0,0,0,8" Icon="Globe24">
                <custom:CardControl.Header>
                    <controls:CardHeaderControl 
                        Title="{x:Static resources:Resource.SettingsPage_UpdateRepository_Title}" 
                        Subtitle="{x:Static resources:Resource.SettingsPage_UpdateRepository_Message}" />
                </custom:CardControl.Header>
                <StackPanel Margin="0,0,0,8">
                    <TextBlock
                        Margin="0,0,0,4"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{x:Static resources:Resource.SettingsPage_UpdateRepository_Owner_Label}" />
                    <wpfui:TextBox
                        x:Name="_updateRepositoryOwnerTextBox"
                        MinWidth="300"
                        Margin="0,0,0,8"
                        AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_UpdateRepository_Owner_Label}"
                        PlaceholderText="{x:Static resources:Resource.SettingsPage_UpdateRepository_Owner_Placeholder}"
                        TextChanged="UpdateRepositoryOwnerTextBox_TextChanged" />
                    <TextBlock
                        Margin="0,0,0,4"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Text="{x:Static resources:Resource.SettingsPage_UpdateRepository_Name_Label}" />
                    <wpfui:TextBox
                        x:Name="_updateRepositoryNameTextBox"
                        MinWidth="300"
                        Margin="0,0,0,8"
                        AutomationProperties.Name="{x:Static resources:Resource.SettingsPage_UpdateRepository_Name_Label}"
                        PlaceholderText="{x:Static resources:Resource.SettingsPage_UpdateRepository_Name_Placeholder}"
                        TextChanged="UpdateRepositoryNameTextBox_TextChanged" />
                </StackPanel>
            </custom:CardControl>
        </StackPanel>
    </ScrollViewer>
</UserControl>
