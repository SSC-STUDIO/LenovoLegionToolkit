<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="clr-namespace:System;assembly=mscorlib">

    <!-- Animation Durations -->
    <Duration x:Key="AnimationDurationFast">0:0:0.1</Duration>
    <Duration x:Key="AnimationDurationMedium">0:0:0.2</Duration>
    <Duration x:Key="AnimationDurationSlow">0:0:0.3</Duration>

    <!-- Animation Easing Functions -->
    <CubicEase x:Key="AnimationEasingCubicOut" EasingMode="EaseOut" />
    <ExponentialEase x:Key="AnimationEasingExpoOut" EasingMode="EaseOut" Exponent="7" />

    <!-- Configuration Parameters (can be adjusted by user settings later) -->
    <s:Double x:Key="AnimationOpacityStart">0.0</s:Double>
    <s:Double x:Key="AnimationOpacityEnd">1.0</s:Double>
    <s:Double x:Key="AnimationTranslationOffset">10.0</s:Double>

</ResourceDictionary>
