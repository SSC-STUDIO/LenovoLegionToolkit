<local:BaseWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Settings.NavigationItemsSettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:custom="clr-namespace:LenovoLegionToolkit.WPF.Controls.Custom"
    xmlns:local="clr-namespace:LenovoLegionToolkit.WPF.Windows"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.NavigationItemsSettingsWindow_Title}"
    Height="600"
    MinWidth="500"
    MinHeight="300"
    MaxWidth="500"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    ResizeMode="CanMinimize"
    ShowInTaskbar="False"
    WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar
            Grid.Row="0"
            CanMaximize="false"
            ShowMaximize="false"
            ShowMinimize="false"
            UseSnapLayout="false" />

        <Grid
            Grid.Row="0"
            Height="24"
            Margin="12,8,12,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                VerticalAlignment="Center"
                FontSize="12"
                IsHitTestVisible="False"
                Text="{x:Static resources:Resource.NavigationItemsSettingsWindow_Title}" />
        </Grid>

        <wpfui:DynamicScrollViewer Grid.Row="1" Margin="12,0,0,0">
            <StackPanel Margin="0,0,16,0">
                <TextBlock
                    Margin="0,0,0,16"
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="{x:Static resources:Resource.NavigationItemsSettingsWindow_Description}"
                    TextWrapping="Wrap" />

                <custom:CardControl Margin="0,0,0,8">
                    <custom:CardControl.Header>
                        <controls:CardHeaderControl 
                            Title="{x:Static resources:Resource.MainWindow_NavigationItem_Keyboard}" 
                            Subtitle="{x:Static resources:Resource.NavigationItemsSettingsWindow_ShowKeyboardNavigationItem_Description}" />
                    </custom:CardControl.Header>
                    <wpfui:ToggleSwitch
                        x:Name="_keyboardToggle"
                        Margin="0,0,0,8"
                        Click="NavigationItemToggle_Click"
                        Tag="keyboard" />
                </custom:CardControl>

                <custom:CardControl Margin="0,0,0,8">
                    <custom:CardControl.Header>
                        <controls:CardHeaderControl 
                            Title="{x:Static resources:Resource.MainWindow_NavigationItem_Actions}" 
                            Subtitle="{x:Static resources:Resource.NavigationItemsSettingsWindow_ShowAutomationNavigationItem_Description}" />
                    </custom:CardControl.Header>
                    <wpfui:ToggleSwitch
                        x:Name="_automationToggle"
                        Margin="0,0,0,8"
                        Click="NavigationItemToggle_Click"
                        Tag="automation" />
                </custom:CardControl>

                <custom:CardControl Margin="0,0,0,8">
                    <custom:CardControl.Header>
                        <controls:CardHeaderControl 
                            Title="{x:Static resources:Resource.MainWindow_NavigationItem_Macro}" 
                            Subtitle="{x:Static resources:Resource.NavigationItemsSettingsWindow_ShowMacroNavigationItem_Description}" />
                    </custom:CardControl.Header>
                    <wpfui:ToggleSwitch
                        x:Name="_macroToggle"
                        Margin="0,0,0,8"
                        Click="NavigationItemToggle_Click"
                        Tag="macro" />
                </custom:CardControl>

                <custom:CardControl Margin="0,0,0,8">
                    <custom:CardControl.Header>
                        <controls:CardHeaderControl 
                            Title="{x:Static resources:Resource.MainWindow_NavigationItem_WindowsOptimization}" 
                            Subtitle="{x:Static resources:Resource.NavigationItemsSettingsWindow_ShowWindowsOptimizationNavigationItem_Description}" />
                    </custom:CardControl.Header>
                    <wpfui:ToggleSwitch
                        x:Name="_windowsOptimizationToggle"
                        Margin="0,0,0,8"
                        Click="NavigationItemToggle_Click"
                        Tag="windowsOptimization" />
                </custom:CardControl>



                <custom:CardControl Margin="0,0,0,8">
                    <custom:CardControl.Header>
                        <controls:CardHeaderControl 
                            Title="{x:Static resources:Resource.MainWindow_NavigationItem_PluginExtensions}" 
                            Subtitle="{x:Static resources:Resource.NavigationItemsSettingsWindow_ShowPluginExtensionsNavigationItem_Description}" />
                    </custom:CardControl.Header>
                    <wpfui:ToggleSwitch
                        x:Name="_pluginExtensionsToggle"
                        Margin="0,0,0,8"
                        Click="NavigationItemToggle_Click"
                        Tag="pluginExtensions" />
                </custom:CardControl>



                <custom:CardControl Margin="0,0,0,24">
                    <custom:CardControl.Header>
                        <controls:CardHeaderControl 
                            Title="{x:Static resources:Resource.MainWindow_NavigationItem_About}" 
                            Subtitle="{x:Static resources:Resource.NavigationItemsSettingsWindow_ShowAboutNavigationItem_Description}" />
                    </custom:CardControl.Header>
                    <wpfui:ToggleSwitch
                        x:Name="_aboutToggle"
                        Margin="0,0,0,8"
                        Click="NavigationItemToggle_Click"
                        Tag="about" />
                </custom:CardControl>
            </StackPanel>
        </wpfui:DynamicScrollViewer>

    </Grid>
</local:BaseWindow>