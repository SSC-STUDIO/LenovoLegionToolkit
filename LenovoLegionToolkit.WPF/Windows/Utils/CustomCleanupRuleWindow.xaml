<local:BaseWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Utils.CustomCleanupRuleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:LenovoLegionToolkit.WPF.Windows"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.CustomCleanupRuleWindow_Title}"
    Width="520"
    Height="360"
    MinWidth="520"
    MinHeight="360"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    WindowStartupLocation="CenterOwner">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar
            Grid.Row="0"
            Title="{x:Static resources:Resource.CustomCleanupRuleWindow_Title}"
            CanMaximize="False"
            ShowMaximize="False"
            ShowMinimize="False"
            UseSnapLayout="False" />

        <Grid Grid.Row="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="0,0,0,4"
                FontWeight="SemiBold"
                Text="{x:Static resources:Resource.CustomCleanupRuleWindow_Folder_Label}" />
            <StackPanel
                Grid.Row="1"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Orientation="Horizontal">
                <TextBox
                    x:Name="_folderTextBox"
                    MinWidth="320"
                    VerticalAlignment="Center" />
                <wpfui:Button
                    x:Name="_browseButton"
                    Margin="8,0,0,0"
                    Appearance="Secondary"
                    Click="BrowseButton_Click"
                    Content="{x:Static resources:Resource.CustomCleanupRuleWindow_Browse_Button}" />
            </StackPanel>

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="0,16,0,4"
                FontWeight="SemiBold"
                Text="{x:Static resources:Resource.CustomCleanupRuleWindow_Extensions_Label}" />
            <StackPanel
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2">
                <TextBox
                    x:Name="_extensionsTextBox"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    MinHeight="80"
                    VerticalScrollBarVisibility="Auto" />
                <TextBlock
                    Margin="0,6,0,0"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="{x:Static resources:Resource.CustomCleanupRuleWindow_Extensions_Hint}"
                    TextWrapping="Wrap" />
            </StackPanel>

            <CheckBox
                x:Name="_recursiveCheckBox"
                Grid.Row="4"
                Grid.Column="0"
                Margin="0,16,0,0"
                Content="{x:Static resources:Resource.CustomCleanupRuleWindow_Recursive_Label}" />

            <StackPanel
                Grid.Row="4"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Orientation="Horizontal"
                Margin="0,16,0,0">
                <wpfui:Button
                    Margin="0,0,8,0"
                    Appearance="Secondary"
                    Click="CancelButton_Click"
                    Content="{x:Static resources:Resource.Cancel}" />
                <wpfui:Button
                    x:Name="_saveButton"
                    Appearance="Primary"
                    Click="SaveButton_Click"
                    Content="{x:Static resources:Resource.Save}" />
            </StackPanel>
        </Grid>
    </Grid>
</local:BaseWindow>

