<wpfui:UiWindow
    x:Class="LenovoLegionToolkit.WPF.Windows.Utils.CompatibilityCheckErrorWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.CompatibilityCheckErrorWindow_Title}"
    MinWidth="700"
    MinHeight="500"
    MaxWidth="900"
    MaxHeight="650"
    Closed="Window_Closed"
    ExtendsContentIntoTitleBar="True"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    Loaded="Window_Loaded"
    ResizeMode="CanResize"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    SnapsToDevicePixels="True"
    WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <wpfui:TitleBar
            Title="{x:Static resources:Resource.CompatibilityCheckErrorWindow_Title}"
            Grid.Row="0"
            CanMaximize="True"
            ShowMaximize="True"
            ShowMinimize="False"
            UseSnapLayout="False" />

        <Grid Grid.Row="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Error Icon -->
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Grid.RowSpan="2"
                Margin="0,0,20,0"
                VerticalAlignment="Top">
                <wpfui:SymbolIcon 
                    FontSize="64" 
                    Symbol="ErrorCircle24"
                    Foreground="{DynamicResource SystemFillColorCriticalBrush}" />
            </StackPanel>

            <!-- Main Error Message -->
            <StackPanel Grid.Row="0" Grid.Column="1">
                <TextBlock
                    x:Name="_mainMessageTextBlock"
                    Margin="0,0,0,12"
                    Focusable="True"
                    FontSize="18"
                    FontWeight="Medium"
                    TextWrapping="Wrap" />
                
                <TextBlock
                    Margin="0,0,0,16"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    Text="{x:Static resources:Resource.CompatibilityCheckErrorWindow_Description}"
                    TextWrapping="Wrap" />
            </StackPanel>

            <!-- Error Details -->
            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="0,0,0,16"
                Background="{DynamicResource ControlFillColorSecondaryBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="12"
                MaxHeight="200">
                <ScrollViewer
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto">
                    <TextBlock
                        x:Name="_errorDetailsTextBlock"
                        FontFamily="Consolas, Courier New"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        TextWrapping="Wrap" />
                </ScrollViewer>
            </Border>

            <!-- Troubleshooting Tips -->
            <Expander
                Grid.Row="2"
                Grid.Column="1"
                Margin="0,0,0,20"
                Header="{x:Static resources:Resource.CompatibilityCheckErrorWindow_TroubleshootingTitle}"
                IsExpanded="False">
                <StackPanel Margin="12,8,0,0">
                    <TextBlock
                        Margin="0,0,0,8"
                        TextWrapping="Wrap">
                        <Run Text="• " FontWeight="Medium" />
                        <Run Text="{x:Static resources:Resource.CompatibilityCheckErrorWindow_Tip1}" />
                    </TextBlock>
                    <TextBlock
                        Margin="0,0,0,8"
                        TextWrapping="Wrap">
                        <Run Text="• " FontWeight="Medium" />
                        <Run Text="{x:Static resources:Resource.CompatibilityCheckErrorWindow_Tip2}" />
                    </TextBlock>
                    <TextBlock
                        Margin="0,0,0,8"
                        TextWrapping="Wrap">
                        <Run Text="• " FontWeight="Medium" />
                        <Run Text="{x:Static resources:Resource.CompatibilityCheckErrorWindow_Tip3}" />
                    </TextBlock>
                    <TextBlock TextWrapping="Wrap">
                        <Run Text="• " FontWeight="Medium" />
                        <Run Text="{x:Static resources:Resource.CompatibilityCheckErrorWindow_Tip4}" />
                    </TextBlock>
                </StackPanel>
            </Expander>

            <!-- Action Buttons -->
            <Grid
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="0,0,0,0"
                HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="16" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <wpfui:Button
                    x:Name="_openLogButton"
                    Grid.Column="0"
                    MinWidth="140"
                    Appearance="Secondary"
                    Click="OpenLogButton_Click"
                    Content="{x:Static resources:Resource.CompatibilityCheckErrorWindow_OpenLog}" />
                <wpfui:Button
                    Grid.Column="2"
                    MinWidth="120"
                    Appearance="Primary"
                    Click="CloseButton_Click"
                    Content="{x:Static resources:Resource.Close}" />
            </Grid>
        </Grid>
    </Grid>

</wpfui:UiWindow>
