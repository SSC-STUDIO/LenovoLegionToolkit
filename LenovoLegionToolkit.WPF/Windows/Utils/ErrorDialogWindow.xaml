<Window
    x:Class="LenovoLegionToolkit.WPF.Windows.Utils.ErrorDialogWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    Title="{x:Static resources:Resource.UnexpectedException}"
    Width="600"
    Height="450"
    WindowStartupLocation="CenterOwner"
    ResizeMode="NoResize"
    SizeToContent="Manual"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
            <ui:SymbolIcon Symbol="ErrorCircle24" FontSize="32" Foreground="{DynamicResource SystemFillColorCriticalBrush}" />
            <TextBlock
                x:Name="_titleText"
                Text="{x:Static resources:Resource.UnexpectedException}"
                FontSize="20"
                FontWeight="SemiBold"
                Margin="12,0,0,0"
                VerticalAlignment="Center" />
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                x:Name="_promptText"
                Grid.Row="0"
                FontSize="14"
                Margin="0,0,0,12"
                TextWrapping="Wrap"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <Border
                Grid.Row="1"
                Background="{DynamicResource ControlFillColorTertiaryBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <ScrollViewer
                    x:Name="_scrollViewer"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Disabled"
                    Padding="12">
                    <TextBlock
                        x:Name="_exceptionText"
                        FontSize="12"
                        FontFamily="Consolas, Monaco, monospace"
                        TextWrapping="Wrap"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </ScrollViewer>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button
                x:Name="_continueButton"
                Grid.Column="1"
                Content="{x:Static resources:Resource.UnexpectedException_Continue}"
                Appearance="Secondary"
                Margin="0,0,12,0"
                MinWidth="100" />

            <ui:Button
                x:Name="_exitButton"
                Grid.Column="2"
                Content="{x:Static resources:Resource.UnexpectedException_Exit}"
                Appearance="Primary"
                MinWidth="100" />
        </Grid>
    </Grid>
</Window>
