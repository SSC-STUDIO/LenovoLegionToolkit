<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>net8.0-windows</TargetFramework>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<Platforms>x64</Platforms>
		<OutputType>WinExe</OutputType>
		<ApplicationIcon>Assets/icon.ico</ApplicationIcon>
		<AssemblyName>Lenovo Legion Toolkit</AssemblyName>
		<Copyright>Â© 2024 Bartosz Cichecki</Copyright>
		<Nullable>enable</Nullable>
		<UseWPF>true</UseWPF>
		<UseWindowsForms>true</UseWindowsForms>
		<SelfContained>false</SelfContained>
		<PublishSingleFile>false</PublishSingleFile>
		<PublishReadyToRun>false</PublishReadyToRun>
		<PublishUrl>publish\</PublishUrl>
		<IncludeAllContentForSelfExtract>false</IncludeAllContentForSelfExtract>
		<RollForward>Major</RollForward>
	</PropertyGroup>
	<PropertyGroup>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<NeutralLanguage>en</NeutralLanguage>
		<SatelliteResourceLanguages>ar;bg;cs;de;en;el;es;fr;hu;it;ja;lv;nl;nl-nl;pl;pt;pt-br;ro;ru;sk;uk;tr;vi;zh;zh-hans;zh-hant</SatelliteResourceLanguages>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
	  <DebugType>portable</DebugType>
	</PropertyGroup>
	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
	  <DebugType>embedded</DebugType>
	</PropertyGroup>
	<ItemGroup>
		<PackageReference Include="Autofac" Version="8.2.0" />
		<PackageReference Include="Humanizer" Version="2.14.1" />
		<PackageReference Include="Markdig" Version="0.40.0" />
		<PackageReference Include="Markdig.Wpf" Version="0.5.0.1" />
		<PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
		<PackageReference Include="PixiEditor.ColorPicker" Version="3.4.2" />
		<PackageReference Include="WPF-UI" Version="2.1.0" />
	</ItemGroup>
	<ItemGroup>
		<ProjectReference Include="..\LenovoLegionToolkit.Lib\LenovoLegionToolkit.Lib.csproj" />
		<ProjectReference Include="..\LenovoLegionToolkit.Lib.Automation\LenovoLegionToolkit.Lib.Automation.csproj" />
		<ProjectReference Include="..\LenovoLegionToolkit.Lib.Macro\LenovoLegionToolkit.Lib.Macro.csproj" />
		<ProjectReference Include="..\LenovoLegionToolkit.CLI.Lib\LenovoLegionToolkit.CLI.Lib.csproj" />
		<ProjectReference Include="..\LenovoLegionToolkit.Plugins.SDK\LenovoLegionToolkit.Plugins.SDK.csproj" />
		<!-- Ensure native Shell build runs whenever WPF builds -->
		<!-- ShellIntegration is now a git submodule, Shell.Build.csproj may not exist -->
		<!-- <ProjectReference Include="..\ShellIntegration\Shell.Build.csproj" ReferenceOutputAssembly="false" OutputItemType="None" Condition="Exists('..\ShellIntegration\Shell.Build.csproj')" /> -->
	</ItemGroup>
	<ItemGroup>
		<None Remove="Assets\icon.ico" />
		<None Remove="Assets\default_exe.png" />
		<None Remove="Assets\Donate\paypal_logo.png" />
		<None Remove="Assets\Donate\paypal_qr.png" />
	</ItemGroup>
	<ItemGroup>
		<Content Include="tools\**\*.*" Condition="Exists('$(MSBuildProjectDirectory)\tools')">
			<CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
			<TargetPath>tools\%(RecursiveDir)%(Filename)%(Extension)</TargetPath>
		</Content>
	</ItemGroup>
	<ItemGroup>
		<Resource Include="Assets\default_exe.png" />
		<Resource Include="Assets\icon.ico" />
		<Resource Include="Assets\Donate\paypal_logo.png" />
		<Resource Include="Assets\Donate\paypal_qr.png" />
	</ItemGroup>
	<ItemGroup>
	  <Compile Update="Assets\AssetResources.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>AssetResources.resx</DependentUpon>
	  </Compile>
	  <Compile Update="Resources\Resource.Designer.cs">
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	    <DependentUpon>Resource.resx</DependentUpon>
	  </Compile>
	</ItemGroup>
	<ItemGroup>
	  <EmbeddedResource Update="Assets\AssetResources.resx">
	    <Generator>ResXFileCodeGenerator</Generator>
	    <LastGenOutput>AssetResources.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	  <EmbeddedResource Update="Resources\Resource.resx">
	    <Generator>PublicResXFileCodeGenerator</Generator>
	    <LastGenOutput>Resource.Designer.cs</LastGenOutput>
	  </EmbeddedResource>
	</ItemGroup>
	<Target Name="CopyNilesoftShellArtifacts" AfterTargets="Build;Publish">
		<PropertyGroup>
			<RepoBuildDir>$(MSBuildProjectDirectory)\..\build\</RepoBuildDir>
			<ShellIntegrationSrcBinDir>$(MSBuildProjectDirectory)\..\ShellIntegration\src\bin</ShellIntegrationSrcBinDir>
			<ShellIntegrationBinDir>$(MSBuildProjectDirectory)\..\ShellIntegration\bin</ShellIntegrationBinDir>
		</PropertyGroup>
		<!-- Find shell.exe and shell.dll from ShellIntegration src/bin directory -->
		<ItemGroup>
			<!-- Try ShellIntegration src/bin directory (primary location) -->
			<ShellArtifactsSource Include="$(ShellIntegrationSrcBinDir)\shell.exe" Condition="Exists('$(ShellIntegrationSrcBinDir)\shell.exe')" />
			<ShellArtifactsSource Include="$(ShellIntegrationSrcBinDir)\shell.dll" Condition="Exists('$(ShellIntegrationSrcBinDir)\shell.dll')" />
			<!-- Try ShellIntegration src/exe/bin directory (fallback when SolutionDir not set) -->
			<ShellArtifactsSource Include="$(MSBuildProjectDirectory)\..\ShellIntegration\src\exe\bin\shell.exe" Condition="!Exists('$(ShellIntegrationSrcBinDir)\shell.exe') AND Exists('$(MSBuildProjectDirectory)\..\ShellIntegration\src\exe\bin\shell.exe')" />
			<ShellArtifactsSource Include="$(ShellIntegrationSrcBinDir)\shell.dll" Condition="!Exists('$(ShellIntegrationSrcBinDir)\shell.dll') AND Exists('$(ShellIntegrationSrcBinDir)\shell.dll')" />
			<!-- Try ShellIntegration root bin directory (legacy) -->
			<ShellArtifactsSource Include="$(ShellIntegrationBinDir)\shell.exe" Condition="!Exists('$(ShellIntegrationSrcBinDir)\shell.exe') AND !Exists('$(MSBuildProjectDirectory)\..\ShellIntegration\src\exe\bin\shell.exe') AND Exists('$(ShellIntegrationBinDir)\shell.exe')" />
			<ShellArtifactsSource Include="$(ShellIntegrationBinDir)\shell.dll" Condition="!Exists('$(ShellIntegrationSrcBinDir)\shell.dll') AND Exists('$(ShellIntegrationBinDir)\shell.dll')" />
			<!-- Last resort: search anywhere in ShellIntegration -->
			<ShellArtifactsSource Include="$(MSBuildProjectDirectory)\..\ShellIntegration\**\shell.exe" Condition="!Exists('$(ShellIntegrationSrcBinDir)\shell.exe') AND !Exists('$(MSBuildProjectDirectory)\..\ShellIntegration\src\exe\bin\shell.exe') AND !Exists('$(ShellIntegrationBinDir)\shell.exe')" />
			<ShellArtifactsSource Include="$(MSBuildProjectDirectory)\..\ShellIntegration\**\shell.dll" Condition="!Exists('$(ShellIntegrationSrcBinDir)\shell.dll') AND !Exists('$(ShellIntegrationBinDir)\shell.dll')" />
		</ItemGroup>
		<!-- Copy shell artifacts to app output directory (TargetDir) for distribution -->
		<Message Text="[Shell] Copying shell artifacts to $(TargetDir)..." Importance="normal" />
		<Message Text="[Shell] Found @(ShellArtifactsSource->Count()) shell artifact(s) to copy" Importance="normal" Condition="'@(ShellArtifactsSource)' != ''" />
		<Message Text="[Shell] WARNING: No shell artifacts found to copy. Checked: $(ShellIntegrationSrcBinDir), $(ShellIntegrationBinDir)" Importance="high" Condition="'@(ShellArtifactsSource)' == ''" />
		<Copy SourceFiles="@(ShellArtifactsSource)" DestinationFolder="$(TargetDir)" SkipUnchangedFiles="true" Condition="'@(ShellArtifactsSource)' != ''" />
		<!-- Find imports from ShellIntegration src/bin/imports -->
		<ItemGroup>
			<!-- Try ShellIntegration src/bin/imports -->
			<ShellImportsSource Include="$(ShellIntegrationSrcBinDir)\imports\**\*.*" Condition="Exists('$(ShellIntegrationSrcBinDir)\imports\')" />
			<!-- Try assets location -->
			<ShellImportsSource Include="$(MSBuildProjectDirectory)\..\ShellIntegration\assets\imports\**\*.*" Condition="!Exists('$(ShellIntegrationSrcBinDir)\imports\') AND Exists('$(MSBuildProjectDirectory)\..\ShellIntegration\assets\imports\')" />
			<!-- Try legacy bin -->
			<ShellImportsSource Include="$(ShellIntegrationBinDir)\imports\**\*.*" Condition="!Exists('$(ShellIntegrationSrcBinDir)\imports\') AND !Exists('$(MSBuildProjectDirectory)\..\ShellIntegration\assets\imports\')" />
		</ItemGroup>
		<!-- Copy imports to app output directory preserving structure -->
		<Message Text="[Shell] Copying imports to $(TargetDir)imports..." Importance="normal" Condition="'@(ShellImportsSource)' != ''" />
		<Copy SourceFiles="@(ShellImportsSource)" DestinationFiles="$(TargetDir)imports\%(RecursiveDir)%(Filename)%(Extension)" SkipUnchangedFiles="true" Condition="'@(ShellImportsSource)' != ''" />
		<!-- Find shell.nss from ShellIntegration src/bin -->
		<ItemGroup>
			<!-- Try ShellIntegration src/bin/shell.nss -->
			<ShellConfigSource Include="$(ShellIntegrationSrcBinDir)\shell.nss" Condition="Exists('$(ShellIntegrationSrcBinDir)\shell.nss')" />
			<!-- Try assets location -->
			<ShellConfigSource Include="$(MSBuildProjectDirectory)\..\ShellIntegration\assets\shell.nss" Condition="!Exists('$(ShellIntegrationSrcBinDir)\shell.nss') AND Exists('$(MSBuildProjectDirectory)\..\ShellIntegration\assets\shell.nss')" />
			<!-- Try legacy bin -->
			<ShellConfigSource Include="$(ShellIntegrationBinDir)\shell.nss" Condition="!Exists('$(ShellIntegrationSrcBinDir)\shell.nss') AND !Exists('$(MSBuildProjectDirectory)\..\ShellIntegration\assets\shell.nss')" />
		</ItemGroup>
		<!-- Copy shell.nss to app output directory -->
		<Message Text="[Shell] Copying shell.nss to $(TargetDir)..." Importance="normal" Condition="'@(ShellConfigSource)' != ''" />
		<Copy SourceFiles="@(ShellConfigSource)" DestinationFolder="$(TargetDir)" SkipUnchangedFiles="true" Condition="'@(ShellConfigSource)' != ''" />
	</Target>
	<Target Name="CopyToolsDirectory" AfterTargets="Build;Publish">
		<PropertyGroup>
			<!-- Use root-level tools directory -->
			<ToolsSourceDir>$(MSBuildProjectDirectory)\..\tools</ToolsSourceDir>
			<ToolsTargetDir>$(TargetDir)tools</ToolsTargetDir>
			<RepoBuildDir>$(MSBuildProjectDirectory)\..\build\</RepoBuildDir>
		</PropertyGroup>
		
		<!-- Check if tools directory exists -->
		<PropertyGroup>
			<ToolsDirExists>false</ToolsDirExists>
			<ToolsDirExists Condition="Exists('$(ToolsSourceDir)')">true</ToolsDirExists>
		</PropertyGroup>
		
		<!-- Collect all files from tools directory -->
		<ItemGroup Condition="'$(ToolsDirExists)' == 'true'">
			<ToolsFiles Include="$(ToolsSourceDir)\**\*.*" />
		</ItemGroup>
		
		<!-- Copy to output directory -->
		<Copy SourceFiles="@(ToolsFiles)" 
		      DestinationFiles="$(ToolsTargetDir)%(RecursiveDir)%(Filename)%(Extension)" 
		      SkipUnchangedFiles="true" 
		      Condition="'$(ToolsDirExists)' == 'true'" />
		
		<!-- Also copy to repo-level build folder -->
		<MakeDir Directories="$(RepoBuildDir)" Condition="'$(ToolsDirExists)' == 'true'" />
		<Copy SourceFiles="@(ToolsFiles)" 
		      DestinationFiles="$(RepoBuildDir)tools\%(RecursiveDir)%(Filename)%(Extension)" 
		      SkipUnchangedFiles="true" 
		      Condition="'$(ToolsDirExists)' == 'true'" />
		
		<!-- Log messages for debugging -->
		<Message Text="[Tools] Source directory: $(ToolsSourceDir)" Importance="normal" />
		<Message Text="[Tools] Target directory: $(ToolsTargetDir)" Importance="normal" />
		<Message Text="[Tools] Repo build directory: $(RepoBuildDir)tools" Importance="normal" />
		<Message Text="[Tools] Tools directory exists: $(ToolsDirExists)" Importance="normal" />
		<Message Text="[Tools] Found @(ToolsFiles->Count()) files to copy" Importance="normal" Condition="'$(ToolsDirExists)' == 'true'" />
		<Message Text="[Tools] Successfully copied tools directory from $(ToolsSourceDir) to $(ToolsTargetDir) and $(RepoBuildDir)tools" Importance="high" Condition="'$(ToolsDirExists)' == 'true'" />
		<Message Text="[Tools] WARNING: Tools directory not found at $(ToolsSourceDir), skipping copy." Importance="high" Condition="'$(ToolsDirExists)' == 'false'" />
	</Target>
</Project>
