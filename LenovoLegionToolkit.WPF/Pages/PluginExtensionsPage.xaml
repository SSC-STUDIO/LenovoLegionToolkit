<wpfui:UiPage
    x:Class="LenovoLegionToolkit.WPF.Pages.PluginExtensionsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:custom="clr-namespace:LenovoLegionToolkit.WPF.Controls.Custom"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    x:Name="PluginExtensionsPageRoot"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    Scrollable="True">
    
    <wpfui:UiPage.Resources>
        <!-- Tool Card Button Style (copied from ToolsPage) -->
        <Style x:Key="ToolCardButtonStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource ControlFillColorDefaultBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorDefaultBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Padding" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Margin" Value="0,0,12,12" />
            <Setter Property="Width" Value="110" />
            <Setter Property="MinHeight" Value="110" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect
                        BlurRadius="8"
                        ShadowDepth="2"
                        Opacity="0.1"
                        Color="Black" />
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TranslateTransform />
                </Setter.Value>
            </Setter>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{DynamicResource ControlFillColorSecondaryBrush}" />
                    <Setter Property="BorderBrush" Value="{DynamicResource ControlStrokeColorSecondaryBrush}" />
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="-2" />
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect
                                BlurRadius="12"
                                ShadowDepth="4"
                                Opacity="0.15"
                                Color="Black" />
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </wpfui:UiPage.Resources>

    <Grid Margin="0,0,16,12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <StackPanel Grid.Row="0" Margin="0,16,0,24">
            <TextBlock
                x:Name="_titleTextBlock"
                Focusable="True"
                FontSize="24"
                FontWeight="Medium"
                Text="Plugin Extensions" />
            <TextBlock
                x:Name="_descriptionTextBlock"
                Margin="0,8,0,0"
                Focusable="True"
                Text="Install and manage plugins to extend functionality" />
        </StackPanel>

        <!-- Plugins List -->
        <ScrollViewer
            Grid.Row="1"
            x:Name="_pluginsScrollViewer"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Disabled"
            Padding="0,0,0,24"
            ClipToBounds="False">
            <ItemsControl>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" Margin="0,2,0,0" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.Items>
                    <!-- System Optimization Plugin -->
                    <Border
                        Tag="SystemOptimization"
                        Style="{StaticResource ToolCardButtonStyle}"
                        MouseLeftButtonDown="PluginCard_MouseLeftButtonDown">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <!-- Icon -->
                            <Grid Width="48" Height="48" Margin="0,0,0,10" HorizontalAlignment="Center">
                                <Border
                                    Width="48"
                                    Height="48"
                                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="8"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            ShadowDepth="1"
                                            Opacity="0.08"
                                            Color="Black" />
                                    </Border.Effect>
                                    <wpfui:SymbolIcon
                                        Symbol="Gauge24"
                                        FontSize="24"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                </Border>
                            </Grid>
                            <!-- Plugin Name -->
                            <TextBlock
                                x:Name="_systemOptimizationPluginName"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                LineHeight="18"
                                Margin="0,2,0,4"
                                MaxWidth="90" />
                            <!-- Plugin Description (one line) -->
                            <TextBlock
                                x:Name="_systemOptimizationPluginDescription"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                LineHeight="14"
                                Margin="0,0,0,8"
                                MaxWidth="90"
                                MaxHeight="28" />
                            <!-- Action Buttons -->
                            <StackPanel
                                x:Name="_systemOptimizationPluginActions"
                                Orientation="Vertical"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                                <wpfui:Button
                                    x:Name="_systemOptimizationInstallButton"
                                    Appearance="Primary"
                                    Click="_systemOptimizationPluginButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    FontSize="12">
                                    <TextBlock
                                        x:Name="_systemOptimizationInstallButtonText"
                                        Text="安装" />
                                </wpfui:Button>
                                <wpfui:Button
                                    x:Name="_systemOptimizationUninstallButton"
                                    Appearance="Secondary"
                                    Click="_systemOptimizationUninstallButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    Margin="0,4,0,0"
                                    FontSize="12">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfui:SymbolIcon
                                            Symbol="Delete24"
                                            FontSize="14"
                                            Margin="0,0,4,0" />
                                        <TextBlock Text="卸载" />
                                    </StackPanel>
                                </wpfui:Button>
                            </StackPanel>
                            <!-- Installed Status -->
                            <StackPanel
                                x:Name="_systemOptimizationInstalledStatus"
                                Orientation="Vertical"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                    <wpfui:SymbolIcon
                                        Symbol="CheckmarkCircle24"
                                        FontSize="16"
                                        Margin="0,0,4,0"
                                        Foreground="{DynamicResource AccentFillColorDefaultBrush}" />
                                    <TextBlock
                                        x:Name="_systemOptimizationInstalledStatusText"
                                        FontSize="11"
                                        Foreground="{DynamicResource AccentFillColorDefaultBrush}"
                                        VerticalAlignment="Center"
                                        Text="已安装" />
                                </StackPanel>
                                <wpfui:Button
                                    x:Name="_systemOptimizationUninstallButtonInStatus"
                                    Appearance="Secondary"
                                    Click="_systemOptimizationUninstallButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    FontSize="12">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfui:SymbolIcon
                                            Symbol="Delete24"
                                            FontSize="14"
                                            Margin="0,0,4,0" />
                                        <TextBlock Text="卸载" />
                                    </StackPanel>
                                </wpfui:Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Tools Plugin -->
                    <Border
                        Tag="Tools"
                        Style="{StaticResource ToolCardButtonStyle}"
                        MouseLeftButtonDown="PluginCard_MouseLeftButtonDown">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <!-- Icon -->
                            <Grid Width="48" Height="48" Margin="0,0,0,10" HorizontalAlignment="Center">
                                <Border
                                    Width="48"
                                    Height="48"
                                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="8"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            ShadowDepth="1"
                                            Opacity="0.08"
                                            Color="Black" />
                                    </Border.Effect>
                                    <wpfui:SymbolIcon
                                        Symbol="Toolbox24"
                                        FontSize="24"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                </Border>
                            </Grid>
                            <!-- Plugin Name -->
                            <TextBlock
                                x:Name="_toolsPluginName"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                LineHeight="18"
                                Margin="0,2,0,4"
                                MaxWidth="90" />
                            <!-- Plugin Description (one line) -->
                            <TextBlock
                                x:Name="_toolsPluginDescription"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                LineHeight="14"
                                Margin="0,0,0,8"
                                MaxWidth="90"
                                MaxHeight="28" />
                            <!-- Action Buttons -->
                            <StackPanel
                                x:Name="_toolsPluginActions"
                                Orientation="Vertical"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                                <wpfui:Button
                                    x:Name="_toolsInstallButton"
                                    Appearance="Primary"
                                    Click="_toolsPluginButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    FontSize="12">
                                    <TextBlock
                                        x:Name="_toolsInstallButtonText"
                                        Text="安装" />
                                </wpfui:Button>
                                <wpfui:Button
                                    x:Name="_toolsUninstallButton"
                                    Appearance="Secondary"
                                    Click="_toolsUninstallButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    Margin="0,4,0,0"
                                    FontSize="12">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfui:SymbolIcon
                                            Symbol="Delete24"
                                            FontSize="14"
                                            Margin="0,0,4,0" />
                                        <TextBlock Text="卸载" />
                                    </StackPanel>
                                </wpfui:Button>
                            </StackPanel>
                            <!-- Installed Status -->
                            <StackPanel
                                x:Name="_toolsInstalledStatus"
                                Orientation="Vertical"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                    <wpfui:SymbolIcon
                                        Symbol="CheckmarkCircle24"
                                        FontSize="16"
                                        Margin="0,0,4,0"
                                        Foreground="{DynamicResource AccentFillColorDefaultBrush}" />
                                    <TextBlock
                                        x:Name="_toolsInstalledStatusText"
                                        FontSize="11"
                                        Foreground="{DynamicResource AccentFillColorDefaultBrush}"
                                        VerticalAlignment="Center"
                                        Text="已安装" />
                                </StackPanel>
                                <wpfui:Button
                                    x:Name="_toolsUninstallButtonInStatus"
                                    Appearance="Secondary"
                                    Click="_toolsUninstallButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    FontSize="12">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfui:SymbolIcon
                                            Symbol="Delete24"
                                            FontSize="14"
                                            Margin="0,0,4,0" />
                                        <TextBlock Text="卸载" />
                                    </StackPanel>
                                </wpfui:Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Cleanup Plugin -->
                    <Border
                        Tag="Cleanup"
                        Style="{StaticResource ToolCardButtonStyle}"
                        MouseLeftButtonDown="PluginCard_MouseLeftButtonDown">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <!-- Icon -->
                            <Grid Width="48" Height="48" Margin="0,0,0,10" HorizontalAlignment="Center">
                                <Border
                                    Width="48"
                                    Height="48"
                                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="8"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            ShadowDepth="1"
                                            Opacity="0.08"
                                            Color="Black" />
                                    </Border.Effect>
                                    <wpfui:SymbolIcon
                                        Symbol="Delete24"
                                        FontSize="24"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                </Border>
                            </Grid>
                            <!-- Plugin Name -->
                            <TextBlock
                                x:Name="_cleanupPluginName"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                LineHeight="18"
                                Margin="0,2,0,4"
                                MaxWidth="90" />
                            <!-- Plugin Description (one line) -->
                            <TextBlock
                                x:Name="_cleanupPluginDescription"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                LineHeight="14"
                                Margin="0,0,0,8"
                                MaxWidth="90"
                                MaxHeight="28" />
                            <!-- Action Buttons -->
                            <StackPanel
                                x:Name="_cleanupPluginActions"
                                Orientation="Vertical"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                                <wpfui:Button
                                    x:Name="_cleanupInstallButton"
                                    Appearance="Primary"
                                    Click="_cleanupPluginButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    FontSize="12">
                                    <TextBlock
                                        x:Name="_cleanupInstallButtonText"
                                        Text="安装" />
                                </wpfui:Button>
                                <wpfui:Button
                                    x:Name="_cleanupUninstallButton"
                                    Appearance="Secondary"
                                    Click="_cleanupUninstallButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    Margin="0,4,0,0"
                                    FontSize="12">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfui:SymbolIcon
                                            Symbol="Delete24"
                                            FontSize="14"
                                            Margin="0,0,4,0" />
                                        <TextBlock Text="卸载" />
                                    </StackPanel>
                                </wpfui:Button>
                            </StackPanel>
                            <!-- Installed Status -->
                            <StackPanel
                                x:Name="_cleanupInstalledStatus"
                                Orientation="Vertical"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                    <wpfui:SymbolIcon
                                        Symbol="CheckmarkCircle24"
                                        FontSize="16"
                                        Margin="0,0,4,0"
                                        Foreground="{DynamicResource AccentFillColorDefaultBrush}" />
                                    <TextBlock
                                        x:Name="_cleanupInstalledStatusText"
                                        FontSize="11"
                                        Foreground="{DynamicResource AccentFillColorDefaultBrush}"
                                        VerticalAlignment="Center"
                                        Text="已安装" />
                                </StackPanel>
                                <wpfui:Button
                                    x:Name="_cleanupUninstallButtonInStatus"
                                    Appearance="Secondary"
                                    Click="_cleanupUninstallButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    FontSize="12">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfui:SymbolIcon
                                            Symbol="Delete24"
                                            FontSize="14"
                                            Margin="0,0,4,0" />
                                        <TextBlock Text="卸载" />
                                    </StackPanel>
                                </wpfui:Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- Driver Download Plugin -->
                    <Border
                        Tag="DriverDownload"
                        Style="{StaticResource ToolCardButtonStyle}"
                        MouseLeftButtonDown="PluginCard_MouseLeftButtonDown">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <!-- Icon -->
                            <Grid Width="48" Height="48" Margin="0,0,0,10" HorizontalAlignment="Center">
                                <Border
                                    Width="48"
                                    Height="48"
                                    Background="{DynamicResource ControlFillColorSecondaryBrush}"
                                    CornerRadius="8"
                                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                                    BorderThickness="1">
                                    <Border.Effect>
                                        <DropShadowEffect
                                            BlurRadius="4"
                                            ShadowDepth="1"
                                            Opacity="0.08"
                                            Color="Black" />
                                    </Border.Effect>
                                    <wpfui:SymbolIcon
                                        Symbol="ArrowDownload24"
                                        FontSize="24"
                                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                                </Border>
                            </Grid>
                            <!-- Plugin Name -->
                            <TextBlock
                                x:Name="_driverDownloadPluginName"
                                HorizontalAlignment="Center"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                LineHeight="18"
                                Margin="0,2,0,4"
                                MaxWidth="90" />
                            <!-- Plugin Description (one line) -->
                            <TextBlock
                                x:Name="_driverDownloadPluginDescription"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                LineHeight="14"
                                Margin="0,0,0,8"
                                MaxWidth="90"
                                MaxHeight="28" />
                            <!-- Action Buttons -->
                            <StackPanel
                                x:Name="_driverDownloadPluginActions"
                                Orientation="Vertical"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                                <wpfui:Button
                                    x:Name="_driverDownloadInstallButton"
                                    Appearance="Primary"
                                    Click="_driverDownloadPluginButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    FontSize="12">
                                    <TextBlock
                                        x:Name="_driverDownloadInstallButtonText"
                                        Text="安装" />
                                </wpfui:Button>
                                <wpfui:Button
                                    x:Name="_driverDownloadUninstallButton"
                                    Appearance="Secondary"
                                    Click="_driverDownloadUninstallButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    Margin="0,4,0,0"
                                    FontSize="12">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfui:SymbolIcon
                                            Symbol="Delete24"
                                            FontSize="14"
                                            Margin="0,0,4,0" />
                                        <TextBlock Text="卸载" />
                                    </StackPanel>
                                </wpfui:Button>
                            </StackPanel>
                            <!-- Installed Status -->
                            <StackPanel
                                x:Name="_driverDownloadInstalledStatus"
                                Orientation="Vertical"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Center"
                                Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                                    <wpfui:SymbolIcon
                                        Symbol="CheckmarkCircle24"
                                        FontSize="16"
                                        Margin="0,0,4,0"
                                        Foreground="{DynamicResource AccentFillColorDefaultBrush}" />
                                    <TextBlock
                                        x:Name="_driverDownloadInstalledStatusText"
                                        FontSize="11"
                                        Foreground="{DynamicResource AccentFillColorDefaultBrush}"
                                        VerticalAlignment="Center"
                                        Text="已安装" />
                                </StackPanel>
                                <wpfui:Button
                                    x:Name="_driverDownloadUninstallButtonInStatus"
                                    Appearance="Secondary"
                                    Click="_driverDownloadUninstallButton_Click"
                                    MinWidth="80"
                                    MinHeight="28"
                                    Padding="8,4"
                                    FontSize="12">
                                    <StackPanel Orientation="Horizontal">
                                        <wpfui:SymbolIcon
                                            Symbol="Delete24"
                                            FontSize="14"
                                            Margin="0,0,4,0" />
                                        <TextBlock Text="卸载" />
                                    </StackPanel>
                                </wpfui:Button>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </ItemsControl.Items>
            </ItemsControl>
        </ScrollViewer>

        <!-- Plugin Details Panel -->
        <Border
            Grid.Row="2"
            x:Name="PluginDetailsPanel"
            Margin="0,16,0,0"
            Padding="16,12"
            Background="{DynamicResource ControlFillColorSecondaryBrush}"
            BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0"
            CornerRadius="0"
            Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                
                <!-- Icon -->
                <Border
                    Grid.Column="0"
                    Width="48"
                    Height="48"
                    Margin="0,0,16,0"
                    Background="{DynamicResource ControlFillColorDefaultBrush}"
                    CornerRadius="8"
                    BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                    BorderThickness="1">
                    <wpfui:SymbolIcon
                        x:Name="PluginDetailsIcon"
                        Symbol="Desktop24"
                        FontSize="24"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>
                
                <!-- Details -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock
                        x:Name="PluginDetailsName"
                        FontSize="14"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Margin="0,0,0,2" />
                    <TextBlock
                        x:Name="PluginDetailsDescription"
                        FontSize="12"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        TextWrapping="Wrap"
                        MaxHeight="60"
                        TextTrimming="CharacterEllipsis"
                        Margin="0,0,0,2" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</wpfui:UiPage>
