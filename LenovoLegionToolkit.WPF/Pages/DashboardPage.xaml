<wpfui:UiPage
    x:Class="LenovoLegionToolkit.WPF.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="clr-namespace:LenovoLegionToolkit.WPF.Behaviors"
    xmlns:controls="clr-namespace:LenovoLegionToolkit.WPF.Controls"
    xmlns:custom="clr-namespace:LenovoLegionToolkit.WPF.Controls.Custom"
    xmlns:dashboard="clr-namespace:LenovoLegionToolkit.WPF.Controls.Dashboard"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:resources="clr-namespace:LenovoLegionToolkit.WPF.Resources"
    xmlns:utils="clr-namespace:LenovoLegionToolkit.WPF.Utils"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="{x:Static resources:Resource.DashboardPage_Title}"
    FlowDirection="{x:Static utils:LocalizationHelper.Direction}"
    Initialized="DashboardPage_Initialized"
    Scrollable="True"
    SizeChanged="DashboardPage_SizeChanged">

    <controls:LoadableControl
        x:Name="_loader"
        Margin="0,0,0,12"
        IndicatorMargin="0,64,0,0">
        <StackPanel>
            <dashboard:SensorsControl x:Name="_sensors" Margin="0,16,16,0" />
            <Grid x:Name="_content" />
            
            <!-- Battery Information Section -->
            <StackPanel x:Name="_batterySection" Margin="0,0,16,0">
                <Grid Margin="0,16,0,24">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        Focusable="True"
                        FontSize="24"
                        FontWeight="Medium"
                        Text="{x:Static resources:Resource.BatteryPage_Title}" />
                    <TextBlock
                        x:Name="_status"
                        Grid.Column="2"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        AutomationProperties.HelpText="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text}"
                        AutomationProperties.Name="{x:Static resources:Resource.BatteryPage_Title}"
                        Focusable="True"
                        FontSize="14"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        TextWrapping="NoWrap" />
                    <TextBlock
                        x:Name="_lowBattery"
                        Grid.Column="2"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Focusable="True"
                        FontSize="14"
                        Foreground="{DynamicResource SystemFillColorCautionBrush}"
                        Text="{x:Static resources:Resource.BatteryPage_LowLevel}"
                        Visibility="Collapsed" />
                    <TextBlock
                        x:Name="_lowWattageCharger"
                        Grid.Column="2"
                        Margin="16,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Focusable="True"
                        FontSize="14"
                        Foreground="{DynamicResource SystemFillColorCautionBrush}"
                        Text="{x:Static resources:Resource.BatteryPage_LowWattageChargerConnected}"
                        Visibility="Collapsed" />
                </Grid>
                
                <!-- Battery Parameters Cards -->
                <Grid Margin="0,0,0,0" Grid.IsSharedSizeScope="True">
                    <UniformGrid Columns="4">
                    <!-- Battery Percentage Card -->
                    <custom:CardControl Margin="0,0,12,12" HorizontalContentAlignment="Left">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                x:Name="_batteryPercentageIcon"
                                Grid.Column="0"
                                Symbol="Battery024"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <ProgressBar
                                x:Name="_batteryPercentageBar"
                                Grid.Column="2"
                                Margin="16,0,16,0"
                                Height="6"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"
                                Maximum="100"
                                Minimum="0"
                                Value="0">
                                <i:Interaction.Behaviors>
                                    <behaviors:ProgressBarAnimateBehavior />
                                </i:Interaction.Behaviors>
                            </ProgressBar>
                            <TextBlock
                                x:Name="_percentRemaining"
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Battery Health Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryHealthCard" HorizontalContentAlignment="Left" Visibility="Collapsed">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                Grid.Column="0"
                                Symbol="Heart24"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_BatteryHealth_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <ProgressBar
                                x:Name="_batteryHealthBar"
                                Grid.Column="2"
                                Margin="16,0,16,0"
                                Height="6"
                                VerticalAlignment="Center"
                                Maximum="100"
                                Minimum="0"
                                Value="0">
                                <i:Interaction.Behaviors>
                                    <behaviors:ProgressBarAnimateBehavior />
                                </i:Interaction.Behaviors>
                            </ProgressBar>
                            <TextBlock
                                x:Name="_batteryHealthText"
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Battery Temperature Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryTemperatureCard" Visibility="Collapsed" HorizontalContentAlignment="Left">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                Grid.Column="0"
                                Symbol="Temperature24"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_BatteryTemperature_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                x:Name="_batteryTemperatureText"
                                Grid.Column="3"
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis"
                                Visibility="Collapsed" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Discharge Rate Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryDischargeRateCard" HorizontalContentAlignment="Left">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                Grid.Column="0"
                                Symbol="Battery624"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_DischargeRate_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text=":"
                                Margin="8,0,8,0" />
                            <TextBlock
                                x:Name="_batteryDischargeRateText"
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Min Discharge Rate Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryMinDischargeRateCard" HorizontalContentAlignment="Left">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                Grid.Column="0"
                                Symbol="Battery024"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_MinDischargeRate_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text=":"
                                Margin="8,0,8,0" />
                            <TextBlock
                                x:Name="_batteryMinDischargeRateText"
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Max Discharge Rate Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryMaxDischargeRateCard" HorizontalContentAlignment="Left">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                Grid.Column="0"
                                Symbol="Battery924"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_MaxDischargeRate_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text=":"
                                Margin="8,0,8,0" />
                            <TextBlock
                                x:Name="_batteryMaxDischargeRateText"
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Current Capacity Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryCurrentCapacityCard" HorizontalContentAlignment="Left" Visibility="Collapsed">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                Grid.Column="0"
                                Symbol="Battery624"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_CurrentCapacity_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <ProgressBar
                                x:Name="_batteryCurrentCapacityBar"
                                Grid.Column="2"
                                Margin="16,0,16,0"
                                Height="6"
                                VerticalAlignment="Center"
                                Maximum="100"
                                Minimum="0"
                                Value="0">
                                <i:Interaction.Behaviors>
                                    <behaviors:ProgressBarAnimateBehavior />
                                </i:Interaction.Behaviors>
                            </ProgressBar>
                            <TextBlock
                                x:Name="_batteryCapacityText"
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Full Charge Capacity Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryFullChargeCapacityCard" HorizontalContentAlignment="Left" Visibility="Collapsed">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                Grid.Column="0"
                                Symbol="Battery924"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_FullChargeCapacity_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <ProgressBar
                                x:Name="_batteryFullChargeCapacityBar"
                                Grid.Column="2"
                                Margin="16,0,16,0"
                                Height="6"
                                VerticalAlignment="Center"
                                Maximum="100"
                                Minimum="0"
                                Value="0">
                                <i:Interaction.Behaviors>
                                    <behaviors:ProgressBarAnimateBehavior />
                                </i:Interaction.Behaviors>
                            </ProgressBar>
                            <TextBlock
                                x:Name="_batteryFullChargeCapacityText"
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Design Capacity Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryDesignCapacityCard" HorizontalContentAlignment="Left" Visibility="Collapsed">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="ParamValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                Grid.Column="0"
                                Symbol="Battery624"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_DesignCapacity_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <ProgressBar
                                x:Name="_batteryDesignCapacityBar"
                                Grid.Column="2"
                                Margin="16,0,16,0"
                                Height="6"
                                VerticalAlignment="Center"
                                Maximum="100"
                                Minimum="0"
                                Value="100">
                                <i:Interaction.Behaviors>
                                    <behaviors:ProgressBarAnimateBehavior />
                                </i:Interaction.Behaviors>
                            </ProgressBar>
                            <TextBlock
                                x:Name="_batteryDesignCapacityText"
                                Grid.Column="3"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Cycle Count Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryCycleCountCard" HorizontalContentAlignment="Left" Visibility="Collapsed">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoValue" />
                            </Grid.ColumnDefinitions>
                            <wpfui:SymbolIcon
                                Grid.Column="0"
                                Symbol="ArrowSync24"
                                FontSize="16"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource SystemAccentColorBrush}" />
                            <TextBlock
                                Grid.Column="1"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_CycleCount_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text=":"
                                Margin="8,0,8,0" />
                            <TextBlock
                                x:Name="_batteryCycleCountText"
                                Grid.Column="3"
                                Margin="0,0,0,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap" />
                        </Grid>
                    </custom:CardControl>

                    <!-- On Battery Since Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_onBatterySinceCard" Visibility="Collapsed" HorizontalContentAlignment="Left">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="100" SharedSizeGroup="InfoValue" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_OnBatterySince_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                x:Name="_onBatterySinceText"
                                Grid.Column="3"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap" />
                        </Grid>
                    </custom:CardControl>

                    <!-- Manufacture Date Card -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryManufactureDateCard" Visibility="Collapsed" HorizontalContentAlignment="Left">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="100" SharedSizeGroup="InfoValue" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_ManufactureDate_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                x:Name="_batteryManufactureDateText"
                                Grid.Column="3"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"
                                Visibility="Visible" />
                        </Grid>
                    </custom:CardControl>

                    <!-- First Use Date Card - Hidden when Manufacture Date is shown -->
                    <custom:CardControl Margin="0,0,12,12" x:Name="_batteryFirstUseDateCard" Visibility="Collapsed" HorizontalContentAlignment="Left">
                        <Grid Margin="8,10,20,10" Grid.IsSharedSizeScope="True" HorizontalAlignment="Left">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" SharedSizeGroup="InfoLabel" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" MinWidth="100" SharedSizeGroup="InfoValue" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                FontSize="13"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                Text="{x:Static resources:Resource.BatteryPage_FirstUseDate_Title}"
                                TextTrimming="CharacterEllipsis" />
                            <TextBlock
                                x:Name="_batteryFirstUseDateText"
                                Grid.Column="3"
                                Margin="12,0,0,0"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                TextAlignment="Left"
                                FontSize="13"
                                FontWeight="Medium"
                                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                                Text="-"
                                TextTrimming="CharacterEllipsis"
                                TextWrapping="NoWrap"
                                Visibility="Visible" />
                        </Grid>
                    </custom:CardControl>
                    </UniformGrid>
                </Grid>

            </StackPanel>
        </StackPanel>
    </controls:LoadableControl>

</wpfui:UiPage>
