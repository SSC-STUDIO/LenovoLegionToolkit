<wpfui:UiPage
    x:Class="LenovoLegionToolkit.Plugins.DockLauncher.DockLauncherSettingsPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:plugin="clr-namespace:LenovoLegionToolkit.Plugins.DockLauncher"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
    Scrollable="True"
    Loaded="Page_Loaded">
    
    <ScrollViewer
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="0,16,0,0">
            
            <!-- Header -->
            <StackPanel Margin="0,0,0,28">
                <TextBlock
                    FontSize="28"
                    FontWeight="Medium"
                    Text="Dock 设置" />
                <TextBlock
                    Margin="0,6,0,0"
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    TextWrapping="Wrap"
                    Text="自定义 Dock 栏的外观和行为设置"
                    LineHeight="20" />
            </StackPanel>
            
            <!-- Appearance Settings -->
            <TextBlock
                Text="外观设置"
                FontSize="20"
                FontWeight="Medium"
                Margin="0,0,0,12" />
            
            <!-- Icon Size -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock
                        FontSize="17"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="图标大小"
                        Margin="0,0,0,12" />
                    <wpfui:NumberBox
                        x:Name="_iconSizeNumberBox"
                        Value="{Binding IconSize, Mode=TwoWay}"
                        Minimum="32"
                        Maximum="128"
                        SpinButtonPlacementMode="Inline"
                        Width="200" />
                </StackPanel>
            </Border>
            
            <!-- Dock Height -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock
                        FontSize="17"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="Dock 高度"
                        Margin="0,0,0,12" />
                    <wpfui:NumberBox
                        x:Name="_dockHeightNumberBox"
                        Value="{Binding DockHeight, Mode=TwoWay}"
                        Minimum="60"
                        Maximum="150"
                        SpinButtonPlacementMode="Inline"
                        Width="200" />
                </StackPanel>
            </Border>
            
            <!-- Opacity -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock
                        FontSize="17"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="透明度"
                        Margin="0,0,0,12" />
                    <Slider
                        x:Name="_opacitySlider"
                        Value="{Binding Opacity, Mode=TwoWay}"
                        Minimum="0.1"
                        Maximum="1.0"
                        TickFrequency="0.1"
                        IsSnapToTickEnabled="True"
                        Width="300" />
                    <TextBlock
                        Text="{Binding Opacity, StringFormat='{}{0:P0}'}"
                        FontSize="14"
                        Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                        Margin="0,4,0,0" />
                </StackPanel>
            </Border>
            
            <!-- Position -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock
                        FontSize="17"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="位置"
                        Margin="0,0,0,12" />
                    <ComboBox
                        x:Name="_positionComboBox"
                        SelectedIndex="{Binding PositionIndex, Mode=TwoWay}"
                        Width="200">
                        <ComboBoxItem Content="底部" />
                        <ComboBoxItem Content="顶部" />
                        <ComboBoxItem Content="左侧" />
                        <ComboBoxItem Content="右侧" />
                    </ComboBox>
                </StackPanel>
            </Border>
            
            <!-- Behavior Settings -->
            <TextBlock
                Text="行为设置"
                FontSize="20"
                FontWeight="Medium"
                Margin="0,16,0,12" />
            
            <!-- Auto Hide -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="17"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="自动隐藏" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="鼠标离开时自动隐藏 Dock" />
                    </StackPanel>
                    
                    <wpfui:ToggleSwitch
                        Grid.Column="1"
                        x:Name="_autoHideToggle"
                        IsChecked="{Binding AutoHide, Mode=TwoWay}"
                        VerticalAlignment="Center" />
                </Grid>
            </Border>
            
            <!-- Auto Hide Delay -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock
                        FontSize="17"
                        FontWeight="Medium"
                        Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                        Text="自动隐藏延迟（秒）"
                        Margin="0,0,0,12" />
                    <wpfui:NumberBox
                        x:Name="_autoHideDelayNumberBox"
                        Value="{Binding AutoHideDelay, Mode=TwoWay}"
                        Minimum="1"
                        Maximum="10"
                        SpinButtonPlacementMode="Inline"
                        Width="200" />
                </StackPanel>
            </Border>
            
            <!-- Auto Add Taskbar Apps -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="17"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="自动添加任务栏应用" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="自动检测并添加任务栏中运行的应用到 Dock" />
                    </StackPanel>
                    
                    <wpfui:ToggleSwitch
                        Grid.Column="1"
                        x:Name="_autoAddTaskbarAppsToggle"
                        IsChecked="{Binding AutoAddTaskbarApps, Mode=TwoWay}"
                        VerticalAlignment="Center" />
                </Grid>
            </Border>
            
            <!-- Show Running Apps Only -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="17"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="仅显示运行中的应用" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="只显示当前正在运行的应用" />
                    </StackPanel>
                    
                    <wpfui:ToggleSwitch
                        Grid.Column="1"
                        x:Name="_showRunningAppsOnlyToggle"
                        IsChecked="{Binding ShowRunningAppsOnly, Mode=TwoWay}"
                        VerticalAlignment="Center" />
                </Grid>
            </Border>
            
            <!-- Advanced Settings -->
            <TextBlock
                Text="高级设置"
                FontSize="20"
                FontWeight="Medium"
                Margin="0,16,0,12" />
            
            <!-- Blur Effect -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="17"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="模糊效果" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="启用背景模糊效果（需要 Windows 11）" />
                    </StackPanel>
                    
                    <wpfui:ToggleSwitch
                        Grid.Column="1"
                        x:Name="_blurEffectToggle"
                        IsChecked="{Binding BlurEffect, Mode=TwoWay}"
                        VerticalAlignment="Center" />
                </Grid>
            </Border>
            
            <!-- Enable Animations -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="17"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="启用动画" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="启用图标悬停和启动动画效果" />
                    </StackPanel>
                    
                    <wpfui:ToggleSwitch
                        Grid.Column="1"
                        x:Name="_enableAnimationsToggle"
                        IsChecked="{Binding EnableAnimations, Mode=TwoWay}"
                        VerticalAlignment="Center" />
                </Grid>
            </Border>
            
            <!-- Show Window Preview -->
            <Border
                Background="{DynamicResource ControlFillColorDefaultBrush}"
                BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="12"
                Padding="24"
                Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock
                            FontSize="17"
                            FontWeight="Medium"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                            Text="显示窗口预览" />
                        <TextBlock
                            Margin="0,4,0,0"
                            FontSize="13"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            TextWrapping="Wrap"
                            Text="鼠标悬停时显示窗口预览" />
                    </StackPanel>
                    
                    <wpfui:ToggleSwitch
                        Grid.Column="1"
                        x:Name="_showWindowPreviewToggle"
                        IsChecked="{Binding ShowWindowPreview, Mode=TwoWay}"
                        VerticalAlignment="Center" />
                </Grid>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</wpfui:UiPage>

