<wpfui:UiPage
    x:Class="LenovoLegionToolkit.Plugins.AiAssistant.AiAssistantSettingsPage"
    x:Name="PageRoot"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:wpfui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:plugin="clr-namespace:LenovoLegionToolkit.Plugins.AiAssistant"
    UseLayoutRounding="True"
    SnapsToDevicePixels="True"
    TextOptions.TextFormattingMode="Display"
    TextOptions.TextRenderingMode="Auto"
    FlowDirection="LeftToRight"
    Scrollable="False"
    Loaded="Page_Loaded">
    
    <ScrollViewer 
        VerticalScrollBarVisibility="Auto"
        HorizontalScrollBarVisibility="Disabled"
        PanningMode="VerticalOnly">
        <StackPanel Margin="16">
            
            <!-- Header -->
            <StackPanel Margin="0,0,0,24">
                <TextBlock
                    FontSize="20"
                    FontWeight="Medium"
                    Text="{x:Static plugin:Resource.AiAssistant_Settings}" />
                <TextBlock
                    Margin="0,8,0,0"
                    FontSize="14"
                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                    TextWrapping="Wrap"
                    Text="{x:Static plugin:Resource.AiAssistant_SettingsDescription}"
                    LineHeight="20" />
            </StackPanel>

            <!-- Provider Selection -->
            <StackPanel Margin="0,0,0,16">
                <TextBlock
                    Margin="0,0,0,8"
                    FontWeight="Medium"
                    Text="{x:Static plugin:Resource.AiAssistant_Provider}" />
                <ComboBox
                    x:Name="_providerComboBox"
                    SelectedIndex="0"
                    SelectionChanged="ProviderComboBox_SelectionChanged">
                    <ComboBoxItem Content="{x:Static plugin:Resource.AiAssistant_ProviderOpenAI}" />
                    <ComboBoxItem Content="{x:Static plugin:Resource.AiAssistant_ProviderOllama}" />
                    <ComboBoxItem Content="{x:Static plugin:Resource.AiAssistant_ProviderDeepSeek}" />
                </ComboBox>
            </StackPanel>

            <!-- OpenAI Settings -->
            <StackPanel
                x:Name="_openAiSettingsPanel"
                Margin="0,0,0,16">
                <TextBlock
                    Margin="0,0,0,8"
                    Text="{x:Static plugin:Resource.AiAssistant_OpenAiApiKey}" />
                <PasswordBox
                    x:Name="_openAiApiKeyBox"
                    PasswordChanged="OpenAiApiKeyBox_PasswordChanged"
                    Margin="0,0,0,12" />
                <TextBlock
                    Margin="0,0,0,8"
                    Text="{x:Static plugin:Resource.AiAssistant_OpenAiModel}" />
                <TextBox
                    x:Name="_openAiModelBox"
                    Text="gpt-3.5-turbo"
                    TextChanged="OpenAiModelBox_TextChanged" />
            </StackPanel>

            <!-- DeepSeek Settings -->
            <StackPanel
                x:Name="_deepSeekSettingsPanel"
                Margin="0,0,0,16"
                Visibility="Collapsed">
                <TextBlock
                    Margin="0,0,0,8"
                    Text="{x:Static plugin:Resource.AiAssistant_DeepSeekApiKey}" />
                <PasswordBox
                    x:Name="_deepSeekApiKeyBox"
                    PasswordChanged="DeepSeekApiKeyBox_PasswordChanged"
                    Margin="0,0,0,12" />
                <TextBlock
                    Margin="0,0,0,8"
                    Text="{x:Static plugin:Resource.AiAssistant_DeepSeekModel}" />
                <TextBox
                    x:Name="_deepSeekModelBox"
                    Text="deepseek-chat"
                    TextChanged="DeepSeekModelBox_TextChanged" />
            </StackPanel>

            <!-- Ollama Settings -->
            <StackPanel
                x:Name="_ollamaSettingsPanel"
                Margin="0,0,0,16"
                Visibility="Collapsed">
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <wpfui:ToggleSwitch
                        x:Name="_useBuiltInOllamaToggle"
                        Grid.Column="0"
                        IsChecked="True"
                        Checked="UseBuiltInOllamaToggle_Checked"
                        Unchecked="UseBuiltInOllamaToggle_Unchecked" />
                    <TextBlock
                        Grid.Column="1"
                        Text="{x:Static plugin:Resource.AiAssistant_UseBuiltInOllama}"
                        VerticalAlignment="Center"
                        Margin="12,0,0,0" />
                    <wpfui:Button
                        x:Name="_downloadOllamaButton"
                        Grid.Column="2"
                        Margin="12,0,0,0"
                        Padding="12,4"
                        Content="下载 Ollama"
                        Click="DownloadOllamaButton_Click"
                        ToolTip="自动下载并安装 Ollama" />
                </Grid>
                <!-- Download Progress Area -->
                <StackPanel
                    x:Name="_downloadProgressPanel"
                    Margin="0,8,0,12"
                    Visibility="Collapsed">
                    <ProgressBar
                        x:Name="_downloadProgressBar"
                        Height="8"
                        Minimum="0"
                        Maximum="100"
                        Value="0"
                        Margin="0,0,0,8" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock
                                x:Name="_downloadSpeedText"
                                Margin="0,0,12,0"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                            <TextBlock
                                x:Name="_downloadTimeRemainingText"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        </StackPanel>
                        <wpfui:Button
                            x:Name="_cancelDownloadButton"
                            Grid.Column="1"
                            Padding="8,4"
                            Content="取消"
                            Click="CancelDownloadButton_Click"
                            Appearance="Secondary"
                            FontSize="12" />
                    </Grid>
                </StackPanel>
                <Grid Margin="0,0,0,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <wpfui:ToggleSwitch
                        x:Name="_autoStartOllamaToggle"
                        Grid.Column="0"
                        IsChecked="True"
                        Checked="AutoStartOllamaToggle_Checked"
                        Unchecked="AutoStartOllamaToggle_Unchecked" />
                    <TextBlock
                        Grid.Column="1"
                        Text="{x:Static plugin:Resource.AiAssistant_AutoStartOllama}"
                        VerticalAlignment="Center"
                        Margin="12,0,0,0" />
                </Grid>
                <StackPanel
                    x:Name="_externalOllamaPathPanel"
                    Margin="0,0,0,12"
                    Visibility="Collapsed">
                    <TextBlock
                        Margin="0,0,0,8"
                        Text="{x:Static plugin:Resource.AiAssistant_OllamaExecutablePath}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBox
                            x:Name="_ollamaExecutablePathBox"
                            Grid.Column="0"
                            Margin="0,0,8,0"
                            TextChanged="OllamaExecutablePathBox_TextChanged" />
                        <wpfui:Button
                            Grid.Column="1"
                            Content="{x:Static plugin:Resource.AiAssistant_Browse}"
                            Click="BrowseOllamaExecutableButton_Click"
                            Padding="12,4" />
                    </Grid>
                </StackPanel>
                <TextBlock
                    Margin="0,0,0,8"
                    Text="{x:Static plugin:Resource.AiAssistant_OllamaBaseUrl}" />
                <TextBox
                    x:Name="_ollamaBaseUrlBox"
                    Text="http://localhost:11434"
                    TextChanged="OllamaBaseUrlBox_TextChanged"
                    Margin="0,0,0,12" />
                <TextBlock
                    Margin="0,0,0,8"
                    Text="{x:Static plugin:Resource.AiAssistant_OllamaModel}" />
                <TextBox
                    x:Name="_ollamaModelBox"
                    Text="llama2"
                    TextChanged="OllamaModelBox_TextChanged" />
            </StackPanel>

            <!-- Connection Status and Test Button -->
            <Grid Margin="0,16,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock
                        Margin="0,0,8,0"
                        Text="{x:Static plugin:Resource.AiAssistant_ConnectionStatus}" />
                    <TextBlock
                        x:Name="_connectionStatusText"
                        Text="{x:Static plugin:Resource.AiAssistant_ConnectionStatusDisconnected}" />
                </StackPanel>
                <wpfui:Button
                    x:Name="_testConnectionButton"
                    Grid.Column="1"
                    Content="{x:Static plugin:Resource.AiAssistant_TestConnection}"
                    Click="TestConnectionButton_Click" />
            </Grid>
        </StackPanel>
    </ScrollViewer>
</wpfui:UiPage>

